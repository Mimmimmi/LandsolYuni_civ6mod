		</Row>

		<Row Tag="LOC_DIPLO_REJECT_DELEGATION_FROM_HUMAN_LEADER_HIKAWA_KYOUKA_ANY" Language="zh_Hans_CN">
			<!--拒绝使节派遣 - 个人剧情第1集-->
